{
	"compilerOptions": {
		"module": "commonjs",
		"declaration": false,
		"removeComments": true,
		"strictNullChecks": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"allowSyntheticDefaultImports": true,
		"target": "ES2020",
		"sourceMap": true,
		"outDir": "./dist",
		"baseUrl": "./src",
		"incremental": true,
		"skipLibCheck": true,
		"esModuleInterop": true
	},
	"include": ["src/**/*.ts"],
	"exclude": ["node_modules"]
}
